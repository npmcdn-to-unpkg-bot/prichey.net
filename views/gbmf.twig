{% extends 'layout.twig' %}

{% block content %}
  <section class="gbmf-main">
    <div class="gbmf-images-wrap abs-height-padded">
      <ul class="gbmf-images">
        <li class="grid-sizer"></li>
        {% for image in images %}
        <li class="gbmf-image">
          <img
          src="{{ image.url }}"
          data-id="{{ image.id }}"
          data-latitude="{{ image.location.latitude }}"
          data-longitude="{{ image.location.longitude }}" alt="" />
          <div class="info">
            <ul class="info-list">
              <li>id: {{ image.id }}</li>
              <li>lat: {{ image.location.latitude }}</li>
              <li>lng: {{ image.location.longitude }}</li>
            </ul>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>

    <div class="gbmf-map-wrap">
      <div id="gbmf-map"></div>
    </div>
  </section>

  <script type="text/javascript" src="http://maps.google.com/maps/api/js"></script>
  <!-- <script src="https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script> -->
  <script src="https://npmcdn.com/packery@2.0/dist/packery.pkgd.min.js"></script>
  <script src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"></script>
{% endblock %}

{% block footer_links %}
  <ul class="links">
    <li><a href="/">home</a></li>
    <li><a href="/about">about</a></li>
  </ul>
{% endblock %}
